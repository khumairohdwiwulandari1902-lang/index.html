<body>
    <div class="container">
        <header>
            <h1>Bikinkan</h1>
            <p class="subtitle">Aplikasi Penanggalan Haid Islami</p>
        </header>
        
        <div class="card">
            <h2>Catat Siklus Haid</h2>
            <form id="periodForm">
                <div class="form-group">
                    <label for="startDate">Tanggal Mulai Haid</label>
                    <input type="date" id="startDate" required>
                </div>
                
                <div class="form-group">
                    <label for="endDate">Tanggal Selesai Haid</label>
                    <input type="date" id="endDate" required>
                </div>
                
                <div class="form-group">
                    <label for="cycleType">Jenis Siklus</label>
                    <select id="cycleType">
                        <option value="regular">Haid Biasa</option>
                        <option value="istihadah">Istihadah</option>
                    </select>
                </div>
                
                <button type="submit">Simpan Data</button>
            </form>
        </div>
        
        <div class="card">
            <h2>Status Saat Ini</h2>
            <div class="form-group">
                <label for="checkDate">Periksa Status untuk Tanggal</label>
                <input type="date" id="checkDate" required>
            </div>
            <button id="checkStatus">Periksa Status</button>
            
            <div class="result" id="statusResult">
                <!-- Hasil akan ditampilkan di sini -->
            </div>
        </div>
        
        <div class="card">
            <h2>Riwayat Haid</h2>
            <div id="historyList">
                <!-- Riwayat akan ditampilkan di sini -->
            </div>
        </div>
        
        <div class="info-box">
            <div class="info-title">Informasi Penting</div>
            <p>Bikinkan membantu wanita muslimah mencatat dan menganalisis siklus haid berdasarkan ketentuan Islam:</p>
            <ul style="margin-left: 20px; margin-top: 10px;">
                <li>Masa haid minimum: 1 hari, maksimum: 15 hari</li>
                <li>Masa suci minimum: 15 hari</li>
                <li>Istihadah adalah darah di luar kebiasaan haid</li>
                <li>Aplikasi ini membantu membedakan antara haid biasa dan istihadah</li>
            </ul>
        </div>
        
        <footer>
            <p>Bikinkan &copy; 2023 - Aplikasi Penanggalan Haid Islami</p>
        </footer>
    </div>

    <script>
        // Data storage
        let periodHistory = JSON.parse(localStorage.getItem('bikinkanHistory')) || [];
        
        // DOM Elements
        const periodForm = document.getElementById('periodForm');
        const startDateInput = document.getElementById('startDate');
        const endDateInput = document.getElementById('endDate');
        const cycleTypeSelect = document.getElementById('cycleType');
        const checkDateInput = document.getElementById('checkDate');
        const checkStatusBtn = document.getElementById('checkStatus');
        const statusResult = document.getElementById('statusResult');
        const historyList = document.getElementById('historyList');
        
        // Set default dates to today
        const today = new Date().toISOString().split('T')[0];
        startDateInput.value = today;
        endDateInput.value = today;
        checkDateInput.value = today;
        
        // Event Listeners
        periodForm.addEventListener('submit', savePeriodData);
        checkStatusBtn.addEventListener('click', checkCurrentStatus);
        
        // Load history on page load
        displayHistory();
        
        // Functions
        function savePeriodData(e) {
            e.preventDefault();
            
            const startDate = startDateInput.value;
            const endDate = endDateInput.value;
            const cycleType = cycleTypeSelect.value;
            
            // Validate dates
            if (new Date(startDate) > new Date(endDate)) {
                alert('Tanggal selesai tidak boleh sebelum tanggal mulai!');
                return;
            }
            
            // Calculate duration
            const start = new Date(startDate);
            const end = new Date(endDate);
            const duration = Math.ceil((end - start) / (1000 * 60 * 60 * 24)) + 1;
            
            // Add to history
            const periodData = {
                id: Date.now(),
                startDate,
                endDate,
                duration,
                cycleType,
                createdAt: new Date().toISOString()
            };
            
            periodHistory.push(periodData);
            localStorage.setItem('bikinkanHistory', JSON.stringify(periodHistory));
            
            // Reset form
            periodForm.reset();
            startDateInput.value = today;
            endDateInput.value = today;
            
            // Update display
            displayHistory();
            
            alert('Data haid berhasil disimpan!');
        }
        
        function checkCurrentStatus() {
            const checkDate = checkDateInput.value;
            
            if (!checkDate) {
                alert('Silakan pilih tanggal untuk diperiksa!');
                return;
            }
            
            let status = 'suci'; // Default status
            let message = '';
            let details = '';
            
            // Check if date falls within any recorded period
            for (const period of periodHistory) {
                const start = new Date(period.startDate);
                const end = new Date(period.endDate);
                const check = new Date(checkDate);
                
                if (check >= start && check <= end) {
                    status = period.cycleType === 'regular' ? 'haid' : 'istihadah';
                    message = `Anda sedang mengalami ${status === 'haid' ? 'haid biasa' : 'istihadah'}.`;
                    details = `Periode: ${formatDate(period.startDate)} - ${formatDate(period.endDate)} (${period.duration} hari)`;
                    break;
                }
            }
            
            // If not in a period, check if it's within 15 days after a period
            if (status === 'suci') {
                for (const period of periodHistory) {
                    const end = new Date(period.endDate);
                    const check = new Date(checkDate);
                    const daysAfter = Math.ceil((check - end) / (1000 * 60 * 60 * 24));
                    
                    if (daysAfter > 0 && daysAfter <= 15) {
                        message = 'Anda sedang dalam masa suci.';
                        details = `Masa suci ke-${daysAfter} hari setelah haid berakhir.`;
                        break;
                    } else if (daysAfter > 15) {
                        message = 'Anda sedang dalam masa suci.';
                        details = 'Masa suci telah melebihi 15 hari.';
                    }
                }
                
                if (periodHistory.length === 0) {
                    message = 'Anda sedang dalam masa suci.';
                    details = 'Belum ada data haid yang tercatat.';
                }
            }
            
            // Display result
            statusResult.innerHTML = `
                <div class="status ${status}">Status: ${status === 'haid' ? 'Haid Biasa' : status === 'istihadah' ? 'Istihadah' : 'Suci'}</div>
                <p>${message}</p>
                <p>${details}</p>
                
                <div class="info-box" style="margin-top: 15px;">
                    <div class="info-title">Keterangan Hukum</div>
                    <p>
                        ${status === 'haid' 
                            ? 'Pada masa haid, wanita dilarang shalat, puasa, membaca Al-Quran, dan berhubungan suami istri.' 
                            : status === 'istihadah' 
                            ? 'Pada masa istihadah, wanita tetap wajib shalat dan puasa, namun perlu berwudhu setiap kali akan shalat.' 
                            : 'Pada masa suci, semua ibadah dapat dilakukan secara normal.'}
                    </p>
                </div>
            `;
            
            statusResult.classList.add('active');
        }
        
        function displayHistory() {
            if (periodHistory.length === 0) {
                historyList.innerHTML = '<p>Belum ada data haid yang tercatat.</p>';
                return;
            }
            
            // Sort by date (newest first)
            const sortedHistory = [...periodHistory].sort((a, b) => new Date(b.startDate) - new Date(a.startDate));
            
            historyList.innerHTML = sortedHistory.map(period => `
                <div class="history-item">
                    <div>
                        <span class="date-display">${formatDate(period.startDate)} - ${formatDate(period.endDate)}</span>
                        <div>${period.duration} hari (${period.cycleType === 'regular' ? 'Haid Biasa' : 'Istihadah'})</div>
                    </div>
                    <button onclick="deletePeriod(${period.id})" style="width: auto; padding: 5px 10px; background: var(--danger);">Hapus</button>
                </div>
            `).join('');
        }
        
        function deletePeriod(id) {
            if (confirm('Apakah Anda yakin ingin menghapus data ini?')) {
                periodHistory = periodHistory.filter(period => period.id !== id);
                localStorage.setItem('bikinkanHistory', JSON.stringify(periodHistory));
                displayHistory();
            }
        }
        
        function formatDate(dateString) {
            const options = { day: 'numeric', month: 'long', year: 'numeric' };
            return new Date(dateString).toLocaleDateString('id-ID', options);
        }
    </script>
</body>
</html>
